@model dblu.Portale.Plugin.Docs.ViewModels.VisibilitaAttributoViewModel

@using dblu.Portale.Plugin.Docs.ViewModels
@using Kendo.Mvc.UI

@(Html.Kendo().DropDownList()
        .Name("ddlVisibilita")
        .DataTextField("Descrizione")
        .DataValueField("Id")
        .Events(e => e.Change("change"))
        .BindTo(new List<VisibilitaAttributoViewModel>() {
            new VisibilitaAttributoViewModel() {
                Id = dblu.Docs.Classi.Visibilita_Attributi.EDITABLE
            },
            new VisibilitaAttributoViewModel() {
                Id = dblu.Docs.Classi.Visibilita_Attributi.HIDDEN
            },
            new VisibilitaAttributoViewModel() {
                Id = dblu.Docs.Classi.Visibilita_Attributi.VISIBLE
            } 
        })
)