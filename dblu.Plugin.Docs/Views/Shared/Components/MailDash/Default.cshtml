
@page
@inject dblu.Portale.Plugin.Docs.Services.MailService _mailservice
@{

    var numeroEmail = _mailservice.CountEmailInArrivo("EMAIL", User.Claims);
}

<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
<div class="row">

    <div class="col-lg-10 col-xs-10">
        <!-- small box -->
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3>@numeroEmail</h3>
                <p>email in arrivo</p>
            </div>
            <div class="icon">
                <i class="fas fa-envelope-open-text"></i>
            </div>
            <a href="~/MailView/InArrivo" class="small-box-footer">Apri <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>

