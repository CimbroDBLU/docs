
@addTagHelper *, Syncfusion.EJ2
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@inject dblu.Portale.Plugin.Docs.Services.MailService _mailservice
@model dblu.Portale.ViewModels.TemplateViewModel 

@using System.Drawing
@{ var dinamica = Convert.ToInt32(@Configuration.GetSection("Portale")["DashBoardDinamica"]);

 var numeroEmail = _mailservice.CountEmailInArrivo("EMAIL", User.Claims, dblu.Docs.Models.StatoAllegato.DaSmistare ); }

@if (dinamica == 1)
{
<div class="row">

    <div class="col-lg-12 col-xs-12">
        <br />
        <!-- small box -->
        <div class="small-box" style="background-color:#ff5722;color:white">
            <div class="inner">
                <h3>@numeroEmail</h3>
                <p>Email da smistare</p>
                <br />
            </div>
            <div class="icon">
                <i class="fas fa-map-signs"></i>
            </div>
            <a href="~/MailView/Smistamento" class="small-box-footer">Apri <i class="fa fa-arrow-circle-right"></i></a>

        </div>
    </div>

</div> }
            else
            {
<div class="row">

    <div class="col-lg-12 col-xs-12">
        <!-- small box -->
        <div class="small-box" style="background-color:#ff5722;color:white">
            <div class="inner">
                <h3>@numeroEmail</h3>
                <p>Email in arrivo</p>
                <br />
            </div>
            <div class="icon">
                <i class="fas fa-map-signs"></i>
            </div>
            <a href="~/MailView/InArrivo" class="small-box-footer">Apri <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>

</div> }
