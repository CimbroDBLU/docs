                                @(Html.Kendo().Grid<dblu.Docs.Models.Allegati>(Allegati)
                                .Name("GridAllegati")
                                .PersistSelection()
                                .Columns(columns =>
                                {
                                    columns.Select().Width(50).Title("Seleziona");
